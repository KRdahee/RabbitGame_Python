    rabbit.turn_left()
    rabbit.move()
    rabbit.move()
    rabbit.turn_left()
    rabbit.move()
    rabbit.turn_left()
    rabbit.turn_left()
    rabbit.turn_left()
    rabbit.move()
    rabbit.move()
    rabbit.drop_carrot()
    rabbit.turn_left()
    rabbit.turn_left()
    rabbit.move()
    rabbit.move()
    rabbit.turn_left()
    rabbit.move()
    rabbit.turn_left()
    rabbit.turn_left()
    rabbit.turn_left()
    rabbit.move()
    rabbit.move()
    rabbit.turn_left()
    rabbit.move()
    rabbit.turn_left()
    rabbit.turn_left()
    rabbit.turn_left()
    rabbit.move()
    rabbit.move()
    rabbit.turn_left()
    rabbit.move()
    rabbit.turn_left()
    rabbit.turn_left()
    rabbit.turn_left()
    rabbit.move()
    rabbit.move()
    rabbit.turn_left()
    rabbit.move()
    rabbit.turn_left()
    rabbit.turn_left()
    rabbit.turn_left()
    rabbit.move()


rabbit.move()
